<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/interpretation_list2_rank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/dp10"
            android:drawableRight="@mipmap/paihang"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp10"
            android:text="热度排行"
            android:textColor="#ff434f6d"
            android:textSize="@dimen/sp16" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/interpretation_list2_download"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp17"
            android:drawablePadding="@dimen/dp10"
            android:drawableRight="@mipmap/xiazai"
            android:gravity="center_vertical"
            android:text="离线下载"
            android:textColor="#ff606980"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/gray_c" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/interpretation_list2_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>