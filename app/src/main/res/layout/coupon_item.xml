<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <LinearLayout
        android:layout_marginTop="@dimen/dp5"
        android:background="@mipmap/mask"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp15"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#FFF36B1E"
                    android:textSize="@dimen/sp20"
                    android:text="￥"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#FFF36B1E"
                    android:textSize="@dimen/sp30"
                    android:text="20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



            <TextView
                android:id="@+id/coupon_cond"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:textColor="#FF777D84"
                android:textSize="@dimen/sp12"
                android:text="满100可用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/coupon_name"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp30"
                android:textSize="@dimen/sp16"
                android:text="旅游优惠券"
                android:textColor="#FF434F6D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/coupon_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp30"
                android:textSize="@dimen/sp14"
                android:text="产品介绍"
                android:textColor="#FF606980"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/coupon_time"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp30"
                android:textSize="@dimen/sp12"
                android:text="2018/08/08-2018/10/10"
                android:textColor="#FF777D84"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>
    
</LinearLayout>