        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginTop="@dimen/dp20"
                android:text="注册账号"
                android:textSize="@dimen/sp15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/login_returnpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp22"
                android:layout_marginTop="@dimen/dp20"
                android:text="忘记密码？"
                android:textSize="@dimen/sp15" />
        </LinearLayout>



        <Button
            android:id="@+id/bt_login_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp30"
            android:background="@mipmap/bar"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        
        <LinearLayout
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp30"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/wxlogin"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50" />

            <ImageView
                android:layout_marginRight="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_gravity="center"
                android:src="@mipmap/wblogin"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50" />
            <ImageView

                android:layout_gravity="center"
                android:src="@mipmap/qqlogin"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50" />

        </LinearLayout>

